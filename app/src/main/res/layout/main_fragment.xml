<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="li.klass.photo_copy.ui.main.MainFragment">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sourceImage"
                android:contentDescription="@string/source_image"
                android:src="@drawable/ic_cross_red" />

            <TextView
                android:id="@+id/sourceText"
                android:text="@string/no_external_devices" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/targetImage"
                android:contentDescription="@string/target_image"
                android:src="@drawable/ic_cross_red" />

            <TextView
                android:id="@+id/targetText"
                android:text="@string/no_external_devices" />
        </TableRow>
    </TableLayout>

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/start_copying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
